# ========================================
# Environment Configuration Template
# ========================================
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 채워주세요.
# cp .env.example .env

# ========================================
# Application Environment
# ========================================
# development | production
ENVIRONMENT=development

# ========================================
# API Configuration
# ========================================
API_BASE_URL_DEV=http://localhost:3000
API_BASE_URL_PROD=https://familyplannerbackend-production.up.railway.app

# ========================================
# OAuth - Google
# ========================================
GOOGLE_WEB_CLIENT_ID=YOUR_GOOGLE_WEB_CLIENT_ID
GOOGLE_ANDROID_CLIENT_ID=YOUR_GOOGLE_ANDROID_CLIENT_ID
GOOGLE_IOS_CLIENT_ID=YOUR_GOOGLE_IOS_CLIENT_ID

# ========================================
# OAuth - Kakao
# ========================================
KAKAO_NATIVE_APP_KEY=YOUR_KAKAO_NATIVE_APP_KEY
KAKAO_JAVASCRIPT_APP_KEY=YOUR_KAKAO_JAVASCRIPT_APP_KEY

# ========================================
# Firebase - Web
# ========================================
FIREBASE_WEB_API_KEY=YOUR_FIREBASE_WEB_API_KEY
FIREBASE_WEB_APP_ID=YOUR_FIREBASE_WEB_APP_ID
FIREBASE_WEB_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
FIREBASE_WEB_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_WEB_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
FIREBASE_WEB_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
FIREBASE_WEB_VAPID_KEY=YOUR_FIREBASE_WEB_VAPID_KEY

# ========================================
# Firebase - Android
# ========================================
FIREBASE_ANDROID_API_KEY=YOUR_FIREBASE_ANDROID_API_KEY
FIREBASE_ANDROID_APP_ID=YOUR_FIREBASE_ANDROID_APP_ID
FIREBASE_ANDROID_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
FIREBASE_ANDROID_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_ANDROID_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com

# ========================================
# Firebase - iOS
# ========================================
FIREBASE_IOS_API_KEY=YOUR_FIREBASE_IOS_API_KEY
FIREBASE_IOS_APP_ID=YOUR_FIREBASE_IOS_APP_ID
FIREBASE_IOS_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
FIREBASE_IOS_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_IOS_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
FIREBASE_IOS_BUNDLE_ID=com.example.familyPlanner
